{% extends 'layout.html.twig' %}

{% block title %}Hello PublisherController!{% endblock %}

{% block content %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1 class="mt-3">Liste des éditeurs</h1>

        <div class="row justify-content-end mb-2 mt-2">

            <div class="col text-right">
                <a href="{{ path('app_publisher_createpublisher') }}" class="btn btn-warning">
                    Nouvel éditeur
                </a>
            </div>
        </div>

        <table class="table">

            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Website</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for publisher in publisherList %}
                <tr>
                    <td>{{ publisher.id }}</td>
                    <td>{{ publisher.name }}</td>
                    <td>{{ publisher.email }}</td>
                    <td>{{ publisher.website }}</td>
                    <td>
                        <a href="{{ path('publisher-delete', {'id': publisher.id}) }}">
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>

{% endblock %}